{
  "name": "pouchdb",
  "version": "0.0.0",
  "description": "PouchDB is a pocket-sized database.",
  "release": "nightly",
  "author": "Dale Harvey",
  "main": "./src/pouch.js",
  "homepage": "https://github.com/daleharvey/pouchdb",
  "repository": "https://github.com/daleharvey/pouchdb",
  "keywords": [
    "db",
    "couchdb",
    "pouchdb"
  ],
  "tags": [
    "db",
    "couchdb",
    "pouchdb"
  ],
  "dependencies": {
    "level": "*",
    "request": "*"
  },
  "jam": {
    "main": "dist/pouchdb-nightly.js",
    "include": [
      "dist/pouchdb-nightly.js",
      "README.md",
      "LICENSE"
    ],
    "dependencies": {
      "simple-uuid": null,
      "md5": null
    }
  },
  "devDependencies": {
    "browserify": "*",
    "watchify": "*",
    "webdriverjs": "*",
    "commander": "*",
    "jshint": "*",
    "uglify-js": "*",
    "qunit": "*",
    "corsproxy": "*",
    "http-proxy": "*",
    "http-server": "*"
  },
  "maintainers": [
    {
      "name": "Dale Harvey",
      "web": "https://github.com/daleharvey"
    },
    {
      "name": "Ryan Ramage",
      "web": "https://github.com/ryanramage"
    }
  ],
  "scripts": {
    "jshint": "jshint -c .jshintrc src/*.js src/adapters/*.js",
    "build-js": "browserify -s Pouch -e src/pouch.js -o dist/pouchdb-nightly.js",
    "build-js": "mkdir -p dist && browserify src/pouch.js -s Pouch -o dist/pouchdb-nightly.js",
    "watch-js": "mkdir -p dist && watchify src/pouch.js -s Pouch -o dist/pouchdb-nightly.js",
    "uglify": "uglifyjs dist/pouchdb-nightly.js -mc > dist/pouchdb-nightly.min.js",
    "build": "npm run build-js && npm run uglify",
    "test-node": "./bin/test-node.js",
    "dev-server": "npm run watch-js & ./bin/dev-server.js",
    "test": "npm run jshint && npm run test-node"
  },
  "browser": {
    "./adapters/pouch.leveldb.js": false,
    "./deps/buffer": false,
    "request": false,
    "level": false,
    "path": false,
    "fs": false,
    "events": false,
    "crypto": false
  }
}
