{
  "name": "pouchdb",
  "version": "2.2.1-prerelease",
  "description": "PouchDB is a pocket-sized database.",
  "main": "./lib/index.js",
  "homepage": "http://pouchdb.com/",
  "repository": "https://github.com/pouchdb/pouchdb",
  "keywords": [
    "db",
    "couchdb",
    "pouchdb"
  ],
  "tags": [
    "db",
    "couchdb",
    "pouchdb"
  ],
  "dependencies": {
    "argsarray": "0.0.1",
    "bluebird": "~1.0.0",
    "inherits": "~2.0.1",
    "level-js": "^2.1.3",
    "level-sublevel": "~5.2.0",
    "leveldown": "~0.10.2",
    "levelup": "~0.18.2",
    "lie": "^2.6.0",
    "localstorage-down": "^0.5.1",
    "pouchdb-mapreduce": "~2.2.2",
    "request": "~2.28.0",
    "extend": "^1.2.1",
    "md5-jkmyers": "0.0.1",
    "through2": "^0.4.1",
    "es3ify": "^0.1.3",
    "events": "nolanlawson/events#ie10",
    "memdown": "^0.8.0"
  },
  "devDependencies": {
    "browserify": "~3.24.13",
    "chai": "^1.9.1",
    "commander": "~2.1.0",
    "cordova": "~3.4.1-0.1.0",
    "corsproxy": "~0.2.13",
    "es5-shim": "^3.1.1",
    "exec-sync": "~0.1.6",
    "glob": "~3.2.9",
    "http-proxy": "~0.10.3",
    "http-server": "~0.5.5",
    "istanbul": "^0.2.7",
    "jshint": "~2.3.0",
    "less": "~1.7.0",
    "mkdirp": "~0.3.5",
    "mocha": "^1.18.2",
    "ncp": "~0.5.0",
    "phantomjs": "^1.9.7-5",
    "replace": "^0.2.9",
    "sauce-connect-launcher": "0.2.2",
    "tape": "~2.12.2",
    "tin": "~0.4.0",
    "typedarray": "0.0.5",
    "ua-parser-js": "^0.6.2",
    "uglify-js": "~2.4.6",
    "watch-glob": "~0.1.1",
    "watchify": "~0.8.2",
    "wd": "~0.2.8"
  },
  "scripts": {
    "build-js": "npm run build-main-js && npm run min && npm run build-plugins",
    "build-main-js": "browserify . -s PouchDB > dist/pouchdb-nightly.js",
    "min": "uglifyjs dist/pouchdb-nightly.js -mc > dist/pouchdb-nightly.min.js",
    "build-plugins": "./bin/build-all-plugins.sh",
    "build": "npm run version && mkdir -p dist && npm run build-js",
    "version": "echo \"module.exports = $(./bin/get-version.js);\" > lib/version-browser.js",
    "test-node": "./bin/run-mocha.sh",
    "test-browser": "mkdir -p dist && npm run build-js && ./bin/test-browser.js",
    "cordova": "npm run build && ./bin/run-cordova.sh",
    "jshint": "jshint -c .jshintrc bin/ lib/ tests/*.js tests/performance/*.js",
    "dev": "npm run version && ./bin/dev-server.js",
    "test": "npm run version && npm run jshint && ./bin/run-test.sh",
    "publish": "./bin/publish.sh",
    "publish-site": "./bin/publish-site.sh",
    "build-site": "./bin/build-site.js",
    "shell": "./bin/repl.js",
    "report-coverage": "./bin/run-coverage.js",
    "build-perf": "browserify tests/performance/*.js > dist/performance-bundle.js"
  },
  "browser": {
    "./deps/buffer": false,
    "request": false,
    "crypto": false,
    "./adapters/leveldb": false,
    "./adapters/levelalt": false,
    "./lib/deps/ajax.js": "./lib/deps/ajax-browser.js",
    "./lib/version.js": "./lib/version-browser.js",
    "./lib/adapters/preferredAdapters.js": "./lib/adapters/preferredAdapters-browser.js",
    "bluebird": "lie",
    "leveldown": "level-js",
    "events": "./node_modules/events/events.js"
  },
  "browserify": {
    "transform": [
      "./node_modules/es3ify"
    ]
  }
}
