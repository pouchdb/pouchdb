{
  "name": "pouchdb",
  "version": "0.0.0",
  "description": "PouchDB is a pocket-sized database.",
  "release": "nightly",
  "author": "Dale Harvey",
  "main": "./lib/index.js",
  "homepage": "https://github.com/daleharvey/pouchdb",
  "repository": "https://github.com/daleharvey/pouchdb",
  "keywords": [
    "db",
    "couchdb",
    "pouchdb"
  ],
  "tags": [
    "db",
    "couchdb",
    "pouchdb"
  ],
  "dependencies": {
    "level": "~0.18.0",
    "request": "~2.28.0",
    "pouchdb-mapreduce": "0.2.0"
  },
  "devDependencies": {
    "commander": "~2.1.0",
    "webdriverjs": "~0.7.14",
    "watchify": "~0.4.1",
    "uglify-js": "~2.4.6",
    "jshint": "~2.3.0",
    "http-proxy": "~0.10.3",
    "corsproxy": "~0.2.13",
    "http-server": "~0.5.5",
    "qunit": "~0.5.17",
    "browserify": "~2.36.1",
    "tin": "~0.3.1",
    "chai": "*",
    "mocha": "*",
    "karma": "*",
    "karma-mocha": "*"
  },
  "maintainers": [
    {
      "name": "Dale Harvey",
      "web": "https://github.com/daleharvey"
    },
    {
      "name": "Ryan Ramage",
      "web": "https://github.com/ryanramage"
    }
  ],
  "scripts": {
    "jshint": "jshint -c .jshintrc lib/*.js lib/adapters/*.js",
    "build-js": "mkdir -p dist && browserify lib/index.js -s PouchDB -o dist/pouchdb-nightly.js",
    "watch-js": "mkdir -p dist && watchify lib/index.js -s PouchDB -o dist/pouchdb-nightly.js",
    "uglify": "uglifyjs dist/pouchdb-nightly.js -mc > dist/pouchdb-nightly.min.js",
    "build": "npm run build-js && npm run uglify",
    "test-node": "mocha test/**/*_test.js",
    "test-browser": "npm run build-js && ./bin/check-cors.js && karma start pouchdb.conf.js --single-run --browsers Firefox",
    "check-cors": "./bin/check-cors.js",
    "dev-server": "npm run watch-js & ./bin/dev-server.js",
    "test": "npm run jshint && npm run test-node && npm run test-browser"
  },
  "browser": {
    "./adapters/leveldb": false,
    "./deps/buffer": false,
    "request": false,
    "level": false,
    "path": false,
    "fs": false,
    "events": false,
    "crypto": false
  }
}
